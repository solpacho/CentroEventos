@page "/Login"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject SesionUsuario Sesion

<h3>Iniciar sesi칩n</h3>

<EditForm Model="@modelo" OnValidSubmit="IniciarSesion" FormName="LoginForm" Enhance>
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="email">Email:</label>
        <InputText id="email" name="modelo.Email" class="form-control" @bind-Value="modelo.Email" />
        <ValidationMessage For="@(() => modelo.Email)" />
    </div>

    <div class="mb-3">
        <label for="contrasenia">Contrase침a:</label>
        <InputText id="contrasenia" name="modelo.Contrasenia" class="form-control" type="password" @bind-Value="modelo.Contrasenia" />
        <ValidationMessage For="@(() => modelo.Contrasenia)" />
    </div>

    <button class="btn btn-primary" type="submit">Iniciar Sesi칩n</button>
</EditForm>

@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert alert-danger">@mensaje</div>
}

@code {
    [SupplyParameterFromForm]
    private LoginModel modelo { get; set; } = new();
    
    private string mensaje = "";

    private void IniciarSesion()
    {
        try
        {
            Sesion.IniciarSesion(modelo.Email!, modelo.Contrasenia!);
            mensaje = "Bienvenido. Redirigiendo...";
            Navigation.NavigateTo("/Inicio");
        }
        catch (Exception ex)
        {
            mensaje = $"Error al iniciar sesi칩n: {ex.Message}";
        }
    }
}

