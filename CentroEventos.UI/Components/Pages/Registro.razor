@page "/Registro"
@inject UsuarioAltaUseCase AltaUsuario
@inject NavigationManager Navigation

<h3>Registro de nuevo usuario</h3>

<EditForm Model="@modelo" OnValidSubmit="Registrarse">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Nombre:</label>
        <InputText class="form-control" @bind-Value="modelo.Nombre" />
    </div>

    <div class="mb-3">
        <label>Apellido:</label>
        <InputText class="form-control" @bind-Value="modelo.Apellido" />
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <InputText class="form-control" @bind-Value="modelo.Email" />
    </div>

    <div class="mb-3">
        <label>Contraseña:</label>
        <InputText class="form-control" type="password" @bind-Value="modelo.PasswordPlano" />
    </div>

    <button class="btn btn-primary" type="submit">Registrarse</button>
</EditForm>

@if (!string.IsNullOrEmpty(mensajeExito))
{
    <div class="alert alert-success">@mensajeExito</div>
}

@code {
    private RegistroUsuarioModel modelo = new();
    private string mensajeExito = "";

    private void Registrarse()
    {
        try
        {
            var u = new Usuario(modelo.Nombre, modelo.Apellido, modelo.Email);
            AltaUsuario.Ejecutar(u, modelo.PasswordPlano);

            mensajeExito = "Usuario registrado con éxito. Redirigiendo...";
            Navigation.NavigateTo("/Login");
        }
        catch (Exception ex)
        {
            mensajeExito = $"Error al registrar: {ex.Message}";
        }
    }
}
