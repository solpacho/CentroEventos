@page "/Registro"
@inject UsuarioAltaUseCase AltaUsuario
@inject NavigationManager Navigation

<h3>Registro de nuevo usuario</h3>

<EditForm Model="@modelo" OnValidSubmit="Registrarse" FormName="registros">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Nombre:</label>
        <InputText class="form-control" @bind-Value="modelo.Nombre" />
    </div>

    <div class="mb-3">
        <label>Apellido:</label>
        <InputText class="form-control" @bind-Value="modelo.Apellido" />
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <InputText class="form-control" @bind-Value="modelo.Email" />
    </div>

    <div class="mb-3">
        <label>Contraseña:</label>
        <InputText class="form-control" type="password" @bind-Value="password" />
    </div>

    <button class="btn btn-primary" type="submit">Registrarse</button>

    @if (!string.IsNullOrEmpty(mensajeExito))
{
    <div class="alert alert-success">@mensajeExito</div>
}

</EditForm>


@code {
    private Usuario modelo = new();
    private string password = "";
    private string mensajeExito = "";

    private void Registrarse()
    {
        try
        {
            AltaUsuario.Ejecutar(modelo, password);
            mensajeExito = "Usuario registrado con éxito. Redirigiendo...";
            Navigation.NavigateTo("/Login");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            mensajeExito = $"Error al registrar: {ex.Message}";
        }
    }
}